<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Star Wars Quote App</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <style>
   
    .quote{
        display: flex;
        align-self: start;
       align-items: center;
       justify-content: space-around;

    }
    .name1{
       align-self: start;
       align-items: center;
       justify-content: space-around;
    }
  </style>

  <body>
    <h1 style="color: rgb(44, 10, 237);">
      CREATE: May Node and Express be with you.
    </h1>

    <!-- (1): CREATE Task -->
    <!-- -->
    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="button" class="btn btn-danger">Submit</button>
    </form>
    <!-- -->

    <!-- (2) READ Task -->
    <h2>READ: All Quotes in Database</h2>
    <table border="1" cellpadding="5" cellspacing="40" >
        <tr>
            <th>Student Name:</th>
            <th>Student ID:</th>
        </tr>
        <tr>
            <td>
                <ul class="quotes">
                    <!-- Loop through quotes -->
                    <% for(var i = 0; i < quotes.length; i++) {%>
                    <li class="quote">
                      <!-- Output name from the iterated quote object -->
                      <div class="name1"><%= quotes[i].name %></div>:
                      <!-- Output quote from the iterated quote object -->
                      <div class="id1"><%= quotes[i].quote %></div>
                    </li>
                    <% } %>
                  </ul>
            </td>
            
        </tr>
    </table>
    
  </body>
</html>
